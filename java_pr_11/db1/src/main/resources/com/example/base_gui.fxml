<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10"
    xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.BaseGUIController">

    <Label text="Staff Information" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane alignment="CENTER" hgap="10" vgap="5">
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="MI:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="miField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="State:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="stateField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="Telephone:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="telephoneField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

        <HBox spacing="10" alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="9">
            <Button text="View" onAction="#viewRecord" />
            <Button text="Insert" onAction="#insertRecord" />
            <Button text="Update" onAction="#updateRecord" />
            <Button text="Clear" onAction="#clearFields" />
        </HBox>
    </GridPane>
</VBox>